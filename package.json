{
  "name": "mailbot",
  "version": "1.0.0",
  "description": "simple application to send email",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "server": "cd server && npm start",
    "server-install": "cd server && npm install",
    "install": "(cd client && npm install) && (cd server && npm install)",
    "build": "concurrently \"cd client && npm run build\" \"cd server && npm run build\"",
    "start": "concurrently \"cd client && && PORT=3000 npm start\" \"cd server && PORT=7000 npm start\"",
    "start:prod": "cd server && npm run start:prod",
    "heroku-postbuild": "npm run build"

  },
  "keywords": ["react", "reactjs", "node"],
  "author": "Jonathan Cardoz",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.0.0"
  },
  "engines": {
    "node": "12.13.1"
 }
}
